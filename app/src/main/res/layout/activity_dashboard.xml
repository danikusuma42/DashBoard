<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dashboard"
    android:orientation="vertical"
    android:background="@color/Black">

    <TextView
        android:background="@color/hex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MENU DASHBOARD"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textSize="30dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Black"
        android:gravity="center"
        android:padding="15dp">

        <ImageView
            android:id="@+id/iconsepeda"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:onClick="Sepeda"
            android:src="@drawable/ic_baseline_account_circle_24"
            android:background="@drawable/bundar"/>
        <View
            android:layout_width="20dp"
            android:layout_height="0dp"/>
        <ImageView
            android:id="@+id/iconpesawat"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:onClick="pesawat"
            android:src="@drawable/ic_baseline_flight_24"
            android:background="@drawable/bundar"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@color/Black"

        android:padding="15dp">

        <ImageView
            android:id="@+id/icontelpon"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:onClick="telpon"
            android:src="@drawable/ic_baseline_call_24"
            android:background="@drawable/bundar"/>
        <View
            android:layout_width="20dp"
            android:layout_height="0dp"/>
        <ImageView
            android:id="@+id/iconmic"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:onClick="mic"
            android:src="@drawable/ic_baseline_mic_24"
            android:background="@drawable/bundar"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="15dp"
        android:background="@color/Black"
        >

        <ImageView
            android:id="@+id/iconrestaurant"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:onClick="restaurant"
            android:src="@drawable/ic_baseline_restaurant_menu_24"
            android:background="@drawable/bundar"/>
        <View
            android:layout_width="20dp"
            android:layout_height="0dp"/>
        <ImageView
            android:id="@+id/iconkalkulator"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:onClick="kalkulator"
            android:src="@drawable/ic_baseline_headset_24"
            android:background="@drawable/bundar"/>

    </LinearLayout>
</LinearLayout>